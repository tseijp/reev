{
        "name": "@reev/root",
        "author": "tseijp",
        "version": "1.0.0",
        "license": "MIT",
        "private": true,
        "sideEffects": false,
        "scripts": {
                "build": "cd examples/docs && npm run build",
                "start": "cd examples/docs && npm run start",
                "serve": "cd examples/docs && npm run serve",
                "dev": "cd examples/docs && npm run start",
                "watch": "cd packages/core && npx jest --watch --runInBand",
                "cov": "cd packages/core && npx jest --coverage",
                "ls": "cd packages/core && npm publish --dry-run",
                "tsup:core": "cd packages/core && npx tsup",
                "tsup:gesture": "cd packages/gesture && npx tsup",
                "tsup:external": "cd packages/external && npx tsup",
                "tsup": "npm run tsup:core && npm run tsup:gesture && npm run tsup:external",
                "vers": "npm run changeset version",
                "pub": "npm run tsup && npx changeset publish"
        },
        "devDependencies": {
                "@changesets/cli": "*",
                "jest": "*",
                "tsup": "*",
                "ts-jest": "*",
                "typescript": "*"
        },
        "engines": {
                "node": ">=14"
        },
        "workspaces": [
                "examples/*",
                "packages/*"
        ]
}
